pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package'  // Build using Maven, adjust as needed
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'  // Run unit tests, adjust as needed
            }
        }

        stage('Deploy') {
            steps {
                // Add deployment steps here
		sh 'kubectl apply -f deployment.yaml' // Example Kubernetes deployment
            }
        }
    }
}

