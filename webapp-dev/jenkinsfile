pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build') {
            steps {
                sh 'npm install'  # Install project dependencies
                sh 'npm run build' # Build your application (e.g., for production)
            }
        }
        stage('Test') {
            steps {
                sh 'npm test'  # Run unit tests
            }
        }
    }
}

